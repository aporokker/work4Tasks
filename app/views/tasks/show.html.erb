<h3>スケジュール詳細</h3>

<table>
  <tr>
   <th>タイトル</th>
   <td><%= @task.title %></td>
  </tr>
  <tr>
   <th>開始日</th>
   <td><%= @task.startdate.to_s(:date_jp) %></td>
  </tr>
  <tr>
   <th>終了日</th>
   <td><%= @task.enddate.to_s(:date_jp) %></td>
  </tr>
  <tr>
   <th>終日</th>
   <% if @task.allday %>
    <td>○</td>
   <% else %>
    <td></td>
   <% end %>
  </tr>
  <tr>
   <th>スケジュールメモ</th>
   <td><%= @task.memo %></td>
  </tr>
</table>

<div>
 <ul>
  <li><%= link_to "スケジュールを編集する", edit_task_path(@task.id) %></li>
  <li><%= link_to "スケジュールを削除する", task_path(@task.id), method: :delete, data:{confirm:"本当に削除しますか？"} %></li>
  <li><%= link_to "スケジュール一覧に戻る", :tasks %></li>
 </ul>
</div>
